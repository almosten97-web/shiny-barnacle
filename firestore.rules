rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper to check if user is a manager
    function isManager() {
      return get(/databases/$(database)/documents/employees/$(request.auth.uid)).data.role == 'manager';
    }

    match /{document=**} {
      // In local dev without Auth, you might want to allow all. 
      // However, for testing rules, we'll keep them strict.
      allow read: if request.auth != null;
      allow write: if request.auth != null && isManager();
    }
  }
}